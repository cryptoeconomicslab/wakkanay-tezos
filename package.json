  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc --build ./tsconfig.json",
    "build:dev": "tsc",
    "format": "tslint --fix 'src/**/*.ts' 'test/**/*.ts'",
    "lint": "tslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest"
  },
  "dependencies": {
    "@types/jest": "^24.0.19",
    "@types/levelup": "^3.1.1",
    "@types/memdown": "^3.0.0",
    "@types/node-fetch": "^2.5.1",
    "@types/react-native-sqlite-storage": "^3.3.1",
    "ethers": "^4.0.37",
    "js-logger": "^1.6.0",
    "levelup": "^4.3.1",
    "memdown": "^5.1.0",
    "node-fetch": "^2.3.0",
    "prettier": "^1.18.2",
    "react-native-sqlite-storage": "^4.1.0",
    "socket.io": "^2.3.0",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nyc": "^14.0.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "ts-jest": "^24.1.0",
    "typedoc": "^0.15.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
