{
  "name": "@cryptoeconomicslab/tezos-wallet",
  "version": "0.0.3",
  "description": "tezos-wallet",
  "author": {
    "name": "Cryptoeconomics Lab",
    "url": "https://www.cryptoeconomicslab.com/"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --build",
    "build:check": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint --ext ts,tsx src",
    "lint:fix": "eslint --ext ts,tsx src --fix",
    "doc": "typedoc --out docs src",
    "clean": "rm -rf lib docs"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).(ts|js)",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "dependencies": {
    "@cryptoeconomicslab/signature": "^0.0.12",
    "@cryptoeconomicslab/tezos-coder": "^0.0.3",
    "@cryptoeconomicslab/wallet": "^0.0.12",
    "conseiljs": "^0.3.1",
    "lodash.flattendeep": "^4.4.0"
  },
  "devDependencies": {
    "@cryptoeconomicslab/level-kvs": "0.0.4",
    "@cryptoeconomicslab/primitives": "^0.0.12",
    "@types/libsodium-wrappers-sumo": "^0.7.3",
    "@types/lodash.flattendeep": "^4.4.6"
  },
  "peerDependencies": {
    "@cryptoeconomicslab/primitives": "^0.0.12"
  }
}
