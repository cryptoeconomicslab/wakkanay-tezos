{
  "name": "@cryptoeconomicslab/tezos-contract",
  "version": "0.0.9",
  "description": "tezos-contract",
  "author": {
    "name": "Cryptoeconomics Lab",
    "url": "https://www.cryptoeconomicslab.com/"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --build",
    "build:check": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint --ext ts,tsx src",
    "lint:fix": "eslint --ext ts,tsx src --fix",
    "doc": "typedoc --out docs src",
    "clean": "rm -rf lib docs"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/?(*.)+(spec|test).(ts|js)",
      "**/?(*.)+(spec|test).ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "dependencies": {
    "@cryptoeconomicslab/contract": "0.0.38",
    "@cryptoeconomicslab/db": "0.0.38",
    "@cryptoeconomicslab/level-kvs": "^0.0.6",
    "@cryptoeconomicslab/ovm": "0.0.38",
    "@cryptoeconomicslab/plasma": "0.0.38",
    "@cryptoeconomicslab/tezos-coder": "^0.0.9",
    "@cryptoeconomicslab/tezos-wallet": "^0.0.9",
    "conseiljs": "^0.3.1",
    "lodash.flattendeep": "^4.4.0",
    "jsbi": "^3.1.2"
  },
  "devDependencies": {
    "@cryptoeconomicslab/primitives": "0.0.38",
    "@types/libsodium-wrappers-sumo": "^0.7.3",
    "@types/lodash.flattendeep": "^4.4.6"
  },
  "peerDependencies": {
    "@cryptoeconomicslab/primitives": "^0.0.27"
  },
  "gitHead": "09fb78d66ccfcd48656b8081e2296b7156594d97"
}
